---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-col items-center h-screen">
		<header class="h-10 w-full bg-green-900 shadow">
			<div class="pl-6 h-10 leading-10 text-xl text-gray-200 ">
				<a href="/">
					けんちゃんくんさんのWeb日記
				</a>
			</div>
		</header>
		<div class="max-w-3xl">
			<slot />
		</div>
	</body>
</html>
