---
import BaseLayout from './Layout.astro'
const { frontmatter } = Astro.props;
---
<BaseLayout title={frontmatter.title + " - けんちゃんくんさんのWeb日記"} slug={frontmatter.title as string} imageUrl={frontmatter.imageUrl}>

<article class="m-5 p-5 border rounded border-gray-200 shadow bg-gray-100">
  <div class="text-sm text-gray-700">{new Date(frontmatter.publishedOn).toLocaleDateString('ja-JP')}</div>
  <h1 class="text-2xl mb-4 font-bold">
    <a href={"/" + encodeURI(frontmatter.title)}>
      {frontmatter.title}
    </a>
  </h1>
  <div>
    <slot/>
  </div>
  <div class="hatenaStar"></div>
  <div class="text-sm mt-5">
    <div class="text-right">created_at: {frontmatter.createdAt}</div>
    <div class="text-right">updated_at: {frontmatter.updatedAt}</div>
  </div>
</article>

<style is:global>
  article {
    @apply text-gray-600 text-lg mb-4 leading-8;
  }

  article h2 {
    @apply text-2xl border-b-2 text-gray-700 mt-8 mb-2;
  }

  article h3 {
    @apply text-xl text-gray-700
  }

  article p {
    @apply mb-4;
  }

  article a {
    @apply underline;
    @apply text-blue-800;
    @apply break-words break-all;
  }

  article ul {
    @apply list-disc list-outside ml-10 mb-4;
  }

  article ol {
    @apply list-decimal list-outside ml-10;
  }

  article ol,ul li {
    @apply leading-8;
  }

  article pre > code {
    @apply block bg-gray-200 p-4 rounded-lg overflow-x-auto leading-5;
  }

  article p img {
    @apply mt-10 mb-10 rounded shadow-md;
  }
</style>

</BaseLayout>
