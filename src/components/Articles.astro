---
import { marked } from 'marked';
import DOMPurify from 'isomorphic-dompurify';

const response = await fetch("https://diary.shu-cream.net/graphql",
  {
    method: 'POST',
    headers: {'Content-Type': 'application/json'},
    body: JSON.stringify({
      query: `
        query {
          articles(first: 12) {
            nodes {
              title
              body
            }
            pageInfo {
              hasPreviousPage
              hasNextPage
              startCursor
              endCursor
            }
          }
        }
      `
    })
  }
)

const json = await response.json();
const articles: Article[] = json.data.articles.nodes;
const pageInfo: PageInfo = json.data.articles.pageInfo;
---

{articles.map((article) =>(
  <>
    <article class="m-5 p-5 h-96 border rounded border-gray-200 shadow overflow-hidden">
      <a href={"/" + article.title}>
        <h1 class="text-2xl mb-4 font-bold">{article.title}</h1>
      </a>
      <div set:html={DOMPurify.sanitize(marked.parse(article.body))}></div>
    </article>
  </>
))}

<div class="mb-10 p-5">
  {pageInfo.hasPreviousPage && <a>新しいエントリへ</a>}
  {pageInfo.hasNextPage && <a class="float-right" href={"/?after=" + pageInfo.endCursor}>古いエントリへ</a>}
</div>

<style is:global>
  p {
    @apply text-gray-700;
    @apply mb-4;
  }
  article a {
    @apply underline;
    @apply text-blue-800;
  }
  a {
    @apply underline;
    @apply text-blue-800;
  }
</style>
