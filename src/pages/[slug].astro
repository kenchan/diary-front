---
import { marked } from 'marked';
import DOMPurify from 'isomorphic-dompurify';

import Layout from '../layouts/Layout.astro';

const { slug } = Astro.params;
const response = await fetch("https://diary.shu-cream.net/graphql",
  {
    method: 'POST',
    headers: {'Content-Type': 'application/json'},
    body: JSON.stringify({
      query: `
        query {
          article(slug: "${slug}") {
            title
            body
          }
        }
      `
    })
  }
)

const json = await response.json();
const article: Article = await json.data.article;
---

<Layout title="Welcome to Astro.">
  <article class="m-5 p-5 border rounded border-gray-200 shadow overflow-hidden">
    <h1 class="text-2xl mb-4 font-bold">{article.title}</h1>
    <div set:html={DOMPurify.sanitize(marked.parse(article.body))}></div>
  </article>
</Layout>

<style is:global>
  p {
    @apply text-gray-700;
    @apply mb-4;
  }
  article a {
    @apply underline;
    @apply text-blue-800;
  }
</style>
