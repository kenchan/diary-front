---
import { marked } from 'marked';
import hljs from 'highlight.js'
import 'highlight.js/styles/github.css';

import Layout from '../layouts/Layout.astro';
import ArticleCard from '../components/ArticleCard.astro';
import { ArticleFetcher } from '../libs/article_fetcher';

const { slug } = Astro.params;

const articleFetcher = new ArticleFetcher();

const article = await articleFetcher.fetchOne(slug!);

const imageUrl = article.body.match(/!\[[\]]*\]\((https?:\/\/[^)]+)\)/)?.[1] ?? "";

marked.setOptions({
  async: true,
  highlight: (code, lang) => {
    return hljs.highlightAuto(code).value;
  }
})
---

<Layout title={article.title + " - けんちゃんくんさんのWeb日記"} slug={slug} imageUrl={imageUrl}>
  <ArticleCard article={article}></ArticleCard>
</Layout>
